{
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
      ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "block-scoped-var":"warn",
        "camelcase": "warn",
        "no-console":"warn",
        "no-var":"error",
        "prefer-const":"warn",
        "require-await":"warn",
        "indent":"warn",
        "no-template-curly-in-string":"error",
        "require-atomic-updates":"error",
        "curly":"warn",
        "complexity":"warn",
        "eqeqeq": ["error", "smart"],
        "no-useless-concat":"warn",
        "key-spacing":"warn",
        "keyword-spacing":"warn",
        "space-before-function-paren":"warn",
        "no-multi-spaces":"warn",
        "no-trailing-spaces":"warn",
        "no-whitespace-before-property":"warn",
        "quotes":"warn",
        "semi-spacing":"warn",
        "space-before-blocks":"warn",
        "space-in-parens":"warn"
    }
}
